{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "types": ["node", "@playwright/test"],
    "outDir": "./dist",
    "rootDir": ".",
    "baseUrl": ".",
    "paths": {
      "@helpers/*": ["tests/helpers/*"],
      "@fixtures/*": ["tests/fixtures/*"]
    }
  },
  "include": [
    "tests/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
